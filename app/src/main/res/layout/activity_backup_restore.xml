<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/backupRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B3B3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header">

        <TextView
            android:id="@+id/dbHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:textColor="#F39C12"
            android:textStyle="italic|bold"
            android:textSize="28sp"
            android:visibility="visible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="130sp"
        android:layout_centerHorizontal="true"
        android:onClick="backUp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:background="@drawable/backupbtndesign"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32sp"
            android:layout_marginTop="25dp"
            android:text="@string/backup_text"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="22sp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:src="@drawable/backup"
            android:background="@color/float_transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="240sp"
        android:layout_centerHorizontal="true"
        android:onClick="reStore"
        android:backgroundTint="#FFFF00"
        android:background="@drawable/restorebtndesign" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:text="@string/restore_text"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="22sp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/restore"/>

    </RelativeLayout>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="===================="
    android:textColor="@android:color/white"
    android:textSize="30sp"
    android:layout_marginTop="329sp"
    android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="380sp"
        android:layout_centerHorizontal="true"
        android:onClick="Upload"
        android:backgroundTint="@color/blue_btn_bg_color"
        android:background="@drawable/backupbtndesign"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="23dp"
            android:text="@string/upload_text"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="220dp"
            android:visibility="visible"
            android:src="@drawable/uploading"
            android:background="@color/float_transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="490sp"
        android:layout_centerHorizontal="true"
        android:onClick="Download"
        android:backgroundTint="@android:color/holo_green_light"
        android:background="@drawable/restorebtndesign" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="@string/download_text"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/download"/>
    </RelativeLayout>

</RelativeLayout>