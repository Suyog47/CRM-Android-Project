<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/backupRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B3B3">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@drawable/header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="300sp"
            android:layout_height="54dp"
            android:text="Database Controls"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="14dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="33sp"
            android:visibility="visible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="130sp"
        android:layout_marginLeft="10sp"
        android:onClick="backUp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:background="@drawable/backupbtndesign"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:text="Backup to Storage"
            android:textStyle="bold"
            android:textSize="22dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:src="@drawable/backup"
            android:background="@color/float_transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="240sp"
        android:layout_marginLeft="10sp"
        android:onClick="reStore"
        android:backgroundTint="#FFFF00"
        android:background="@drawable/restorebtndesign" >

        <TextView
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:text="Restore from Storage"
            android:textStyle="bold"
            android:textSize="22dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/restore"/>

    </RelativeLayout>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="===================="
    android:textColor="@color/cardview_light_background"
    android:textSize="30dp"
    android:layout_marginTop="325sp"
    android:layout_marginLeft="23dp"/>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="380sp"
        android:layout_marginLeft="10sp"
        android:onClick="Upload"
        android:backgroundTint="@color/blue_btn_bg_color"
        android:background="@drawable/backupbtndesign"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="23dp"
            android:text="Upload to Cloud"
            android:textStyle="bold"
            android:textSize="22dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="220dp"
            android:visibility="visible"
            android:src="@drawable/uploading"
            android:background="@color/float_transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340sp"
        android:layout_height="80sp"
        android:layout_marginTop="490sp"
        android:layout_marginLeft="10sp"
        android:onClick="Download"
        android:backgroundTint="@android:color/holo_green_light"
        android:background="@drawable/restorebtndesign" >

        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:text="Download from Cloud"
            android:textStyle="bold"
            android:textSize="22dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/download"/>

    </RelativeLayout>



</RelativeLayout>