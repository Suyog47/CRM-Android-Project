<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63E0E0">

    <ImageView
        android:id="@+id/addNotesImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header">

        <TextView
            android:id="@+id/addnotesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:textColor="#F39C12"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            android:visibility="visible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="50sp"
        android:layout_width="310sp"
        android:layout_marginTop="110sp"
        android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/addNoteBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:background="@drawable/green_button_background"
        android:onClick="addNewNote"
        android:text="@string/add_notes_btn_text" />

    <Spinner
        android:id="@+id/flags"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="160sp"
        android:background="@drawable/spinner"/>

    </RelativeLayout>
    <EditText
        android:id="@+id/NotesText"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/add_notes_text"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:gravity="start"
        android:textStyle="bold"
        android:background="@drawable/noteviewdesign"
        android:inputType="textMultiLine" />
</RelativeLayout>