<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/setTimerImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Timer For"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35dp"
        android:visibility="visible"
        />

        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView"
            android:layout_marginTop="45sp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:visibility="visible"
            />
    </RelativeLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/setTimerBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:textColor="@android:color/white"
        android:background="@drawable/selectbutton"
        android:onClick="setTimer"
        android:text="Set Timer" />

    <Switch
        android:id="@+id/timerSwitch"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="530dp"
        android:layout_centerHorizontal="true"
        android:text="00:00"
        android:textSize="35dp"
        android:onClick="switchTimer"
        android:background="@drawable/loginview"/>
</RelativeLayout>