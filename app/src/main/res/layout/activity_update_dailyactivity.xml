<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <ImageView
        android:id="@+id/updateDActivityImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header">
    <TextView
        android:id="@+id/updateActivityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:textColor="#F39C12"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:visibility="visible"
        />
    </RelativeLayout>
    <Spinner
        android:id="@+id/weekDropDown"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/spinner"
        />

    <EditText
        android:id="@+id/eventText"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/updateActBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:textColor="@android:color/black"
        android:background="@drawable/updatebutton"
        android:onClick="checkFirst"
        android:text="Update Activity" />

</RelativeLayout>