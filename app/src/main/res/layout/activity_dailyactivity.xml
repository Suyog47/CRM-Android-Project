    android:layout_width="330dp"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp">
    <TableRow>
        <Button
            android:id="@+id/see_Sunday"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="seeActivity"
            android:textColor="@android:color/white"
            android:background="@drawable/seeactivitybutton"
            android:text="@string/dactivity_see_activity_btn_text" />

        <Button
            android:id="@+id/set_Sunday_Timer"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:onClick="setTimer"
            android:textColor="@android:color/black"
            android:background="@drawable/settimerbutton"
            android:text="@string/dactivity_sunday_timer_btn_text" />
    </TableRow>
</TableLayout>

